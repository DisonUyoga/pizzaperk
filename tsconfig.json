{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"],
      "@/components/*": ["src/components/*"],
      "@/constants": ["constants/*"],
      "@/assets": ["assets/*"],
      "@/utils": ["src/utils/*"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts",
    "src/components/__tests__/user/main.test.js",
    "src/components/__tests__/user/main.test.tsx"
  ]
}
